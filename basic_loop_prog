#Q.getting user input for array using for loop
from  array import*
stu_roll=array('i',[])
n=int(input("enter no of element u want in array: "))
i=0
j=0
while i<n:
    stu_roll.append(int(input("enter the elements: ")))
    i+=1
    
print("elements of the array are :")
while (j<len(stu_roll)):
    print(stu_roll[j])
    j+=1
